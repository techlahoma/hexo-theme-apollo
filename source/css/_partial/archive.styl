.archive
  & .post
    margin-bottom: 0

  & .entry-content h1
    font-size: 170%;
    margin-bottom: 0;
  
  & .entry-meta-header
    font-size: 70%;
    margin-top: -0.4em;
  
  & .entry-content header
    margin-bottom: 2em;

#page-nav
  text-align: center
  text-transform: uppercase
  font-size: 95%
  font-weight: bold
  letter-spacing: .1em
  a, span
    display: inline-block
    min-width: 1.2em
    padding: 6px 8px
    margin: 1px 5px 1px 5px
    border-radius: 3px
    background-clip: padding-box
  a
    color: color-default
    text-decoration: none
    &:hover
      background-color: #f5f5f5
  .page-number
    display: inline-block
  .current
    background: #ccc
    color: #fff
  .space
    color: color-border
  .next
    min-width: 5em